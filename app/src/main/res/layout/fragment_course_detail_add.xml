<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Course Header -->
            <TextView
                android:id="@+id/course_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CMPT362 (3)"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/course_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Mobile Applications Programming and Design"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="16sp" />

            <!-- Hidden fields -->
            <TextView
                android:id="@+id/course_units"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/course_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/course_prerequisites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <!-- Choose a lecture section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Choose a lecture section"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="14sp" />

            <!-- Lecture Options Container -->
            <RadioGroup
                android:id="@+id/lecture_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <!-- Lecture D100 Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/lecture_1_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/course_card_outline">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <LinearLayout
                            android:id="@+id/lecture_1_details"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/lecture_1_section"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lecture D100"
                                android:textColor="?android:attr/textColorPrimary"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Instructor"
                                android:textColor="?android:attr/textColorSecondary"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/lecture_1_instructor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Xingdong Yang"
                                android:textColor="?android:attr/textColorPrimary"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Time"
                                android:textColor="?android:attr/textColorSecondary"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/lecture_1_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Thu, 8:30 a.m-11:20 a.m"
                                android:textColor="?android:attr/textColorPrimary"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Location"
                                android:textColor="?android:attr/textColorSecondary"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/lecture_1_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="In Person, AQ3181"
                                android:textColor="?android:attr/textColorPrimary"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <RadioButton
                            android:id="@+id/lecture_option_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:button="@null"
                            android:drawableEnd="?android:attr/listChoiceIndicatorSingle" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Lecture D200 Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/lecture_2_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/course_card_outline">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <LinearLayout
                            android:id="@+id/lecture_2_details"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/lecture_2_section"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lecture D200"
                                android:textColor="?android:attr/textColorPrimary"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Instructor"
                                android:textColor="?android:attr/textColorSecondary"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/lecture_2_instructor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Xingdong Yang"
                                android:textColor="?android:attr/textColorPrimary"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Time"
                                android:textColor="?android:attr/textColorSecondary"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/lecture_2_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Thu, 8:30 a.m-11:20 a.m"
                                android:textColor="?android:attr/textColorPrimary"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Location"
                                android:textColor="?android:attr/textColorSecondary"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/lecture_2_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="In Person, AQ3181"
                                android:textColor="?android:attr/textColorPrimary"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <RadioButton
                            android:id="@+id/lecture_option_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:button="@null"
                            android:drawableEnd="?android:attr/listChoiceIndicatorSingle" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </RadioGroup>

            <!-- Choose a lab section -->
            <TextView
                android:id="@+id/lab_section_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Choose a lab section"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="14sp" />

            <!-- Lab Options Container -->
            <RadioGroup
                android:id="@+id/lab_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <!-- Lab D101 Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/lab_1_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/course_card_outline">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <LinearLayout
                            android:id="@+id/lab_1_details"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/lab_1_section"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lab D101"
                                android:textColor="?android:attr/textColorPrimary"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Instructor"
                                android:textColor="?android:attr/textColorSecondary"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/lab_1_instructor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Xingdong Yang"
                                android:textColor="?android:attr/textColorPrimary"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Time"
                                android:textColor="?android:attr/textColorSecondary"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/lab_1_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Thu, 8:30 a.m-11:20 a.m"
                                android:textColor="?android:attr/textColorPrimary"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Location"
                                android:textColor="?android:attr/textColorSecondary"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/lab_1_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="In Person, AQ3181"
                                android:textColor="?android:attr/textColorPrimary"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <RadioButton
                            android:id="@+id/lab_option_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:button="@null"
                            android:drawableEnd="?android:attr/listChoiceIndicatorSingle" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </RadioGroup>

            <!-- Selected Section Summary -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Selected section"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="14sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/selected_section_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/course_card_outline">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/selected_course_code"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CMPT 362 (3)"
                                android:textColor="?android:attr/textColorPrimary"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/selected_course_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mobile Applications Programming and Design"
                                android:textColor="?android:attr/textColorSecondary"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/selected_instructor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Xingdong Yang"
                                android:textColor="?android:attr/textColorSecondary"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_chevron_right" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="12dp"
                        android:background="@color/course_card_outline" />

                    <TextView
                        android:id="@+id/selected_lecture_section"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lecture D100"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/selected_lecture_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Thu, 8:30a.m - 11:20a.m"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/selected_lecture_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="In Person, AQ3181"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/selected_lab_section"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Lab D101"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/selected_lab_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Thu, 11:30a.m - 12:30p.m"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/selected_lab_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="In Person, AQ3181"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="13sp" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center"
        android:background="?android:attr/colorBackground"
        android:elevation="8dp">

        <Button
            android:id="@+id/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:paddingHorizontal="24dp"
            android:text="Cancel"
            android:textColor="?android:attr/textColorPrimary"
            android:backgroundTint="?android:attr/colorControlHighlight"
            style="@style/Widget.MaterialComponents.Button" />

        <Button
            android:id="@+id/button_add_course"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:paddingHorizontal="24dp"
            android:text="Add this course"
            android:textColor="@android:color/white"
            android:backgroundTint="#9C27B0"
            style="@style/Widget.MaterialComponents.Button" />
    </LinearLayout>

</LinearLayout>
