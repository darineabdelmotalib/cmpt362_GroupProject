<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground">

    <!-- Semester Header -->
    <TextView
        android:id="@+id/semester_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="?android:attr/textColorPrimary"
        android:textStyle="bold"
        android:textSize="22sp"
        android:text="(Semester) (Year)"/>

    <TextView
        android:id="@+id/semester_units_taken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="15dp"
        android:textSize="14sp"
        android:textColor="?android:attr/textColorSecondary"
        android:text="(#) units"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Schedule Section Header -->
            <LinearLayout
                android:id="@+id/scheduleHeaderLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Schedule"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/toggle_schedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/keyboard_arrow_up_24dp"
                    android:contentDescription="Toggle Schedule"/>
            </LinearLayout>

            <!-- Schedule List (colored rows) -->
            <LinearLayout
                android:id="@+id/scheduleContentArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/bg_calendar_container"
                android:clipChildren="true"
                android:visibility="visible">

                <!-- Schedule items will be added here dynamically -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/scheduleRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            </LinearLayout>

            <!-- Empty schedule message -->
            <TextView
                android:id="@+id/empty_schedule_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="30dp"
                android:text="No classes scheduled"
                android:textAlignment="center"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="14sp"
                android:visibility="gone"/>

            <!-- Courses Section Header -->
            <LinearLayout
                android:id="@+id/coursesHeaderLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Courses"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/toggle_courses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/keyboard_arrow_up_24dp"
                    android:contentDescription="Toggle Courses"/>
            </LinearLayout>

            <!-- Empty state message -->
            <TextView
                android:id="@+id/empty_courses_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="30dp"
                android:text="No courses added yet.\nTap 'Edit Schedule' to add courses."
                android:textAlignment="center"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="14sp"
                android:visibility="gone"/>

            <!-- Course List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/coursesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingBottom="20dp"
                android:visibility="visible"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:nestedScrollingEnabled="false"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
