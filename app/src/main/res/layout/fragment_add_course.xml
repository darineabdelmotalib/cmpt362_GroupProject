<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/page_bg">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="Add Course"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/semester_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="15dp"
        android:text="Adding to: Fall 2025"
        android:textColor="@color/gray"
        android:textSize="14sp"/>

    <!-- Search Bar -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rounded_edittext_background"
        android:paddingEnd="15dp"
        android:paddingVertical="12dp"
        android:clipToPadding="false">

        <EditText
            android:id="@+id/input_search_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="Search for course (e.g. CMPT 362)"
            android:inputType="text"
            android:paddingStart="15dp"
            android:textSize="16sp"/>

        <ImageButton
            android:id="@+id/button_search_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:src="@drawable/search_24dp"
            android:background="@android:color/transparent"
            android:contentDescription="Search for Course"/>
    </FrameLayout>

    <!-- Results count -->
    <TextView
        android:id="@+id/course_result_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="10dp"
        android:text="Available Courses"
        android:textColor="@color/gray"
        android:textSize="14sp"/>

    <!-- Course List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/course_results"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="20dp"
        android:clipToPadding="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

</LinearLayout>

